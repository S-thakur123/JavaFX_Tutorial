<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="videoplayer.FXMLDocumentController">
    <center>
        <MediaView fx:id="mediaView" fitWidth="800" fitHeight="450" />
    </center>

    <bottom>
        <VBox>
            <Slider fx:id="progressSlider" prefWidth="800"/>
            <HBox spacing="10" alignment="center" style="-fx-padding: 10;">
                <Button text="▶ Play" onAction="#handlePlay"/>
                <Button text="⏸ Pause" onAction="#handlePause"/>
                <Button text="⏹ Stop" onAction="#handleStop"/>
                <Button text="⛶ Full Screen" onAction="#handleFullscreen"/>
                <Button text="📂 Open" onAction="#handleOpen"/>
                <!--<Button text="➕ Add to Playlist" onAction="#addToPlaylist"/>-->
                <Button text="⏮ Prev" onAction="#handlePrevious"/>
                <Button text="⏭ Next" onAction="#handleNext"/>
                <Slider fx:id="volumeSlider" prefWidth="150"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>